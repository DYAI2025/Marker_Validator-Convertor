{
  "name": "@marker-validator/gui",
  "version": "1.0.0",
  "description": "GUI for Marker Validator & Converter Tool",
  "private": true,
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "start": "concurrently \"npm:start:react\" \"wait-on http://localhost:3000 && npm:start:electron\"",
    "start:react": "vite",
    "start:electron": "electron .",
    "build": "vite build && electron-builder",
    "build:react": "vite build",
    "preview": "vite preview",
    "dev": "vite",
    "electron": "electron .",
    "dist": "vite build && electron-builder --publish=never"
  },
  "keywords": [
    "marker",
    "validator",
    "gui",
    "electron",
    "react"
  ],
  "author": "Benjamin Poersch",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "@marker-validator/cli": "workspace:*",
    "electron-is-dev": "^2.0.0",
    "js-yaml": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3"
  },
  "devDependencies": {
    "@types/diff": "^8.0.0",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "diff": "^8.0.2",
    "diff-match-patch": "^1.0.5",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "prismjs": "^1.30.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.marker-validator.app",
    "productName": "Marker Validator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
